{
  "name": "trial-abuse-guard",
  "version": "1.0.0",
  "description": "A comprehensive npm package for preventing SaaS trial abuse through email similarity detection, temporary email blocking, IP analysis, and VPN detection",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf dist",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts --fix",
    "lint:check": "eslint src/**/*.ts",
    "validate": "node validate-package.js",
    "prepublishOnly": "npm run validate && npm run lint:check && npm run test && npm run build",
    "prepack": "npm run build",
    "postinstall": "node postinstall.js || exit 0"
  },
  "keywords": [
    "trial-abuse",
    "fraud-detection",
    "email-validation",
    "email-similarity",
    "disposable-email",
    "temporary-email",
    "ip-detection",
    "vpn-detection",
    "proxy-detection",
    "security",
    "saas",
    "authentication",
    "nextauth",
    "clerk",
    "signup-protection"
  ],
  "author": {
    "name": "Trial Abuse Guard Team",
    "email": "support@trial-abuse-guard.com",
    "url": "https://trial-abuse-guard.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/yourusername/trial-abuse-guard#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/trial-abuse-guard.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/trial-abuse-guard/issues"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "validator": "^13.11.0"
  },
  "peerDependencies": {
    "@clerk/clerk-sdk-node": "^4.0.0",
    "@clerk/nextjs": "^4.0.0",
    "next-auth": "^5.0.0",
    "react": "^18.0.0"
  },
  "peerDependenciesMeta": {
    "next-auth": {
      "optional": true
    },
    "@clerk/nextjs": {
      "optional": true
    },
    "@clerk/clerk-sdk-node": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@clerk/nextjs": "^6.33.2",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/validator": "^13.11.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.2.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "postinstall.js"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./nextauth": {
      "types": "./dist/integrations/nextauth/NextAuthAdapter.d.ts",
      "import": "./dist/integrations/nextauth/NextAuthAdapter.js",
      "require": "./dist/integrations/nextauth/NextAuthAdapter.js"
    },
    "./clerk": {
      "types": "./dist/integrations/clerk/ClerkAdapter.d.ts",
      "import": "./dist/integrations/clerk/ClerkAdapter.js",
      "require": "./dist/integrations/clerk/ClerkAdapter.js"
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  }
}
